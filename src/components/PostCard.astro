---
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"posts">;
}

const { post } = Astro.props;

const { title, description, date, author } = post.data;

const postUrl = `/posts/${post.slug}/`;

const formattedDate = new Date(date).toLocaleDateString("en-US", {
  year: "numeric",
  month: "short",
  day: "numeric",
});
---

<a href={postUrl} class="post-card-link">
  <div class="post-card flex flex-col gap-1">
    <h3 class="post-card-title text-xl font-medium hover:text-neutral-400">
      {title}
    </h3>
    <div class="post-card-meta">
      <span>By: {author}</span>
      <span>|</span>
      <time datetime={date.toISOString()}>{formattedDate}</time>
    </div>
    <p class="post-card-description">{description}</p>
  </div>
</a>

<style>
  .post-card-link {
    text-decoration: none;
    color: inherit;
    display: block;
    margin-bottom: 1.5rem;
  }
  .post-card {
    transition: box-shadow 0.2s ease-in-out;
    margin-block: 1rem;
  }
  .post-card:hover {
  }

  .post-card-meta {
    font-size: 0.875rem;
    color: #666;
    display: flex;
    gap: 0.5rem;
  }
</style>
